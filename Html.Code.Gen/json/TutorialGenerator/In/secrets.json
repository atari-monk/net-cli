[
    {
        "Title": "Remove plain password from appsettings.json."
    },
    {
        "Title": "Add connection string builder or config class (using Configuration secrets) to programm.cs.<br> Use it in ef core db context config."
    },
    {
        "Title": "Add guid key for secrets to csproj file.",
        "Codes": [
            {
                "Nr": 1,
                "CodeFormat": "dotnet user-secrets init"
            }
        ]
    },
    {
        "Title": "Add secret key value pair.",
        "Codes": [
            {
                "Nr": 2,
                "CodeFormat": "dotnet user-secrets set \"{0}\" \"{1}\"",
                "CodeParams": [
                    {
                        "Name": "DbPassword",
                        "Desc": "key",
                        "CssClass": "mark-name"
                    },
                    {
                        "Name": "x",
                        "Desc": "value",
                        "CssClass": "mark-name"
                    }
                ]
            }
        ]
    },
    {
        "Title": "Show secrets list.",
        "Codes": [
            {
                "Nr": 3,
                "CodeFormat": "dotnet user-secrets list"
            }
        ]
    },
    {
        "Title": "Remove secret.",
        "Codes": [
            {
                "Nr": 4,
                "CodeFormat": "dotnet user-secrets remove \"{0}\"",
                "CodeParams": [
                    {
                        "Name": "DbPassword",
                        "Desc": "key",
                        "CssClass": "mark-name"
                    }
                ]
            }
        ]
    },
    {
        "Title": "Clear all secrets for proj.",
        "Codes": [
            {
                "Nr": 5,
                "CodeFormat": "dotnet user-secrets clear"
            }
        ]
    }
]